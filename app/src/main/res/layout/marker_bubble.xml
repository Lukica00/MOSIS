<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bubble_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bonuspack_bubble" >
    <ImageView android:id="@+id/bubble_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="gone"/>
    <ImageView android:id="@+id/bubble_image_moj"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/outline_hourglass_top_24"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView android:id="@+id/bubble_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="" />
                <TextView android:id="@+id/bubble_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="italic"
                    android:textSize="11sp"
                    android:text="" />
            </LinearLayout>
            <com.google.android.material.button.MaterialButton android:id="@+id/bubble_moreinfo"
                style="?materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"/>
        </LinearLayout>
        <TextView android:id="@+id/bubble_subdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"
            android:text=""/>
        <TextView android:id="@+id/bubble_tezina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"
            android:text=""/>
        <TextView android:id="@+id/bubble_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"
            android:text=""/>
        <TextView android:id="@+id/bubble_datum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"
            android:text=""/>
    </LinearLayout>
</LinearLayout>